{% extends 'base.html.twig' %}
    {% block title %}{{ title }} - Validation{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/css/bootstrap-responsive.css') }}">
    <link rel="stylesheet" href="{{ asset('css/css/font-awesome.css') }}">

{% endblock %}
{%  set totalHT = 0 %}
{%  set totalTTC = 0 %}
{% set refTva= [] %}
{% for menu in menus %}{# initialisaton des clés pour les TVA #}
    {% set refTva = refTva|merge({ (menu.tva.valeur)~' %':0 }) %}{#merge -> permet d'inserer une Tva dés quelle est différente la valeur de la tva#}
{% endfor %}
{% block body %}
    <h1>Valider mon parnier</h1>
    <div class="container">
        <div class="row">
            <div class="col-2"></div>
            <div class="col-8">

                <form>
                    <table class="table table-striped table-hover">
                        <thead>
                        <tr>
                            <th>Références</th>
                            <th>Quantité</th>
                            <th>Prix unitaire</th>
                            <th>Total HT</th>

                        </tr>
                        </thead>

                        <tbody>
                        {% for menu in menus %}
                            <tr>
                                <td>{{ menu.name }}</td>
                                <td>
                                    {{ panier[menu.id] }}
                                </td>
                                <td>{{ menu.price|number_format(2,',',' ') }}€</td>
                                <td>{{ (menu.price *panier[menu.id ])|number_format(2,',',' ')}}€</td>
                            </tr>
                            {%  set totalHT = totalHT +(menu.price *panier[menu.id ])%}
                            {% set totalTTC =totalTTC +(menu.price *panier[menu.id ]) %}
                            {% set refTva = refTva|merge({ (menu.tva.valeur ~' %' ) : refTva[ menu.tva.valeur~' %'] + (menu.price * panier[menu.id])| montantTva(menu.tva.multiplicate)}) %}

                        {% endfor %}
                        </tbody>
                    </table>
                </form>

                <dl class="dl-horizontal pull-right">
                    <dt>Total HT :</dt>
                    <dd>{{ totalHT|number_format(2,',',' ') }}€</dd>
                    <dt>TVA :</dt>
                    {% for key, tva in refTva %}
                        <dd style="text-align: right">
                            {{ key }} :
                            {{ tva |number_format(2,',',' ')}}€
                        </dd>
                    {%  endfor %}
                    <dt>Total TTC:</dt>
                    <dd>{{ totalTTC|number_format(2,',',' ') }}€</dd>
                </dl>
                <div class="span3 pull-left">
                    <dl class="pull-left">
                        <dt><h6>Adresse de livraison</h6></dt>
                        <dt>{{ livraison.nom|capitalize}} {{ livraison.prenom|capitalize }}</dt>
                        <dt>{{ livraison.adresse }}</dt>
                        <dt>{{ livraison.cp }} {{ livraison.ville }}</dt>
                        <dt>{{ livraison.complement }}</dt>
                        <dt>{{ livraison.pays }}</dt>
                    </dl>
                </div>
                <div class="span3 pull-left">
                    <dl class="pull-left">
                        <dt><h6>Adresse de facturation</h6></dt>
                        <dt>{{ facturation.nom|capitalize}} {{ facturation.prenom|capitalize }}</dt>
                        <dt>{{ facturation.adresse }}</dt>
                        <dt>{{ facturation.cp }} {{ facturation.ville }}</dt>
                        <dt>{{ facturation.complement }}</dt>
                        <dt>{{ facturation.pays }}</dt>
                    </dl>
                </div>
                <div class="clearfix"></div>
                <a href="{{ path('livraison') }}" class="btn btn-primary">Retour</a>
                <a href="#" class="btn btn-success pull-right">Payer</a>
            </div>
            <div class="col-2"></div>

        </div>
    </div>
{% endblock %}