{% extends 'base.html.twig' %}

{% block title %}Menu{% endblock %}
{% block body %}

    <h1>Les Sandwichs</h1>

    {% for menu in menus %}
        {% if  menu.category.namecat == "Sandwich" %}
            <div class="bar">
                <span class="left">{{ menu.name|upper }} </span> <span
                        class="right">{{ menu.price|number_format(2,',',' ') }}€</span><br/>
                {% for menu in menu.products %}
                    <span class="titleProduct">{{ menu.title }} </span>
                {% endfor %}
            </div>
        {% endif %}
