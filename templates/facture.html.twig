{% extends'base.html.twig' %}
{% block stylesheets %}
    {#<link rel="stylesheet" href="{{ asset('css/css/bootstrap.css') }}">#}
    <link rel="stylesheet" href="{{ asset('css/css/bootstrap-responsive.css') }}">
    <link rel="stylesheet" href="{{ asset('css/css/font-awesome.css') }}">
    {#<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">#}
    {#<link rel="stylesheet" href="{{ asset('css/style.css') }}">#}
{% endblock %}
{% block title %}{{ title }} - Factures{% endblock %}

{% block body %}
    <br>
    <div class="container">
        <div class="row">
            <div class="col-2"></div>
            <div class="col-8">
                {% for flashMessage in app.session.flashbag.get('success') %}
                    <div class="alert alert-success">
                        {{ flashMessage }}
                    </div>
                {% endfor %}
                {% for flashMessage in app.session.flashbag.get('error') %}
                    <div class="alert alert-error">
                        {{ flashMessage }}
                    </div>
                {% endfor %}
                <h2 style="text-align: center">Factures</h2>
                <form>
                    <table class="table table-striped table-hover">
                        <thead>
                        <tr>
                            <th>Références</th>
                            <th>Date</th>
                            <th>Prix TTC</th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% if factures|length == 0 %}
                            <tr>
                                <td colspan="4" style="text-align: center">Aucunne facture actuellement</td>
                            </tr>
                        {% endif %}
                        {% for facture in factures %}
                            <tr>
                                <td><a href="#">n°: {{ facture.reference }}</a></td>
                                <td>{{ facture.date|date('d/m/Y') }}</td>
                                <td>{{ facture.commande.prixTTC }} €</td>
                                <td><a href="{{ path('facturePDF',{'id':facture.id}) }}" target="_blank"><i
                                                class="icon-refresh"></i></a></td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </form>
            </div>
            <div class="col-2"></div>
        </div>
    </div>
{% endblock %}